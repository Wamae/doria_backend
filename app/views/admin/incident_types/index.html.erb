<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800">Incident Types</h1>

  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
          <th>Type</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @incident_types.each do |incident_type| %>
          <tr>
            <td><%= incident_type.name %></td>
            <td><%= link_to 'Edit', edit_admin_incident_type_path(incident_type) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to 'New Incident Type', new_admin_incident_type_path, class: "d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" %>
  </div>
</div>