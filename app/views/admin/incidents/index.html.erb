<p id="notice"><%= notice %></p>

<!-- Begin Page Content -->
<div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800">Incidents</h1>

  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
          <th>Type</th>
          <th>Location</th>
          <th>Description</th>
          <th>Status</th>
          <th>Reporter</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @incidents.each do |incident| %>
          <tr>
            <td><%= incident.incident_type.name %></td>
            <td><%= incident.location %></td>
            <td><%= incident.description %></td>
            <td><%= incident.status %></td>
            <td><%= "#{incident.user.first_name} #{incident.user.last_name} #{incident.user.phone}" %></td>
            <td><%= link_to 'Edit', edit_admin_incident_path(incident) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>